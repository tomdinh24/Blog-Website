<%- include("partials/header"); -%>

       
    <!-- display default title and content-->
    <div class="box" id="heading">

        <h1>Home</h1>

        <p> <%= startingContent %>  </p>

    </div>

    <!-- display new post title and content-->
    <div class="box">

        <!--iterate through posts array from app.js and retrieve each post title and content -->
        <% newPost.forEach(function(post) { %>

            <h1><%= post.title %></h1>

            <p>
                <%= post.content.substring(0,100) + " ..."%>
                <a href="/post/<%=post.title%>">Read More</a>
            </p>


        <% }) %>

    </div>
    

<%- include("partials/footer"); -%>